if [ -n "$__CURRENT_GIT_BRANCH" ]; the
    local s="(
    s+="$__CURRENT_GIT_BRANCH
    case "$__CURRENT_GIT_BRANCH_STATUS" i
        ahead
        s+="↑
        ;
        diverged
        s+="↕
        ;
        behind
        s+="↓
        ;
    esa
    if [ -n "$__CURRENT_GIT_BRANCH_IS_DIRTY" ]; the
        s+="⚡
    f
    s+=")

    printf " %s%s" "%{${fg[yellow]}%}" $
f
